<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add-dictionary-loinc-code" author="agaba-derrick">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists columnName="loinc_code" schemaName="clinlims"
                              tableName="dictionary"/>
            </not>
        </preConditions>
        <comment>Adds LOINC code column to dictionary for result mappings</comment>
        <addColumn tableName="dictionary">
            <column name="loinc_code" type="VARCHAR(10)"/>
        </addColumn>
    </changeSet>
    <changeSet id="modify-dictionary-loinc-code" author="motesamozzy">
        <preConditions onFail="MARK_RAN">
            <columnExists columnName="loinc_code" schemaName="clinlims" tableName="dictionary"/>
        </preConditions>
        <comment>Modify LOINC code column length from 10 to 20</comment>
         <modifyDataType schemaName="clinlims"
            tableName="dictionary"
            columnName="loinc_code"
            newDataType="varchar(20)"/>
    </changeSet>
</databaseChangeLog>
