<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-generic-program-menu-option" author="elia">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM clinlims.menu WHERE element_id = 'generic_program'
            </sqlCheck>
        </preConditions>

        <insert tableName="menu" schemaName="clinlims">
            <column name="id" valueSequenceNext="menu_seq"/>
            <column name="parent_id" valueComputed="(SELECT id FROM clinlims.menu WHERE element_id = 'menu_results')"/>
            <column name="presentation_order" value="7"/>
            <column name="element_id" value="order_programmes"/>
            <column name="display_key" value="banner.menu.results.order.programmes"/>
            <column name="tool_tip_key" value="banner.menu.results.order.programmes.tooltip"/>
            <column name="new_window" valueBoolean="false"/>
            <column name="is_active" valueBoolean="true"/>
            <column name="action_url" value="/genericProgram"/>
            <column name="hide_in_old_ui" valueBoolean="true" />
        </insert>
    </changeSet>

</databaseChangeLog>
